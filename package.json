{
  "name": "chatvious",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --p tsconfig.server.json && cp -r ./src/views ./dist && webpack --mode=development",
    "build:prod": "tsc --p tsconfig.server.json && cp -r ./src/views ./dist && webpack --mode=production --node-env=production",
    "fullBuild": "npm --prefix ./client run build && npm run build",
    "fullBuild:prod": "npm --prefix ./client run build:prod && npm run build:prod",
    "dev": "concurrently 'tsc --watch --p tsconfig.server.json' 'webpack --watch' 'nodemon'",
    "start": "NODE_ENV=production node dist/app.js",
    "fullStart": "npm run fullBuild:prod && npm start"
  },
  "nodemonConfig": {
    "ignore": [
      "**/node_modules",
      "dist/views"
    ],
    "ext": "js,ejs",
    "exec": "node dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "aws-jwt-verify": "^4.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.2",
    "@webpack-cli/generators": "^3.0.7",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.1",
    "cssnano": "^6.1.2",
    "daisyui": "^4.12.2",
    "ejs-lint": "github:RyanZim/EJS-Lint",
    "mini-css-extract-plugin": "^2.8.1",
    "nodemon": "^3.1.3",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
