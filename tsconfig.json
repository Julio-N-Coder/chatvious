{
  "include": ["src/public/ts/**/*.ts"],
  "exclude": ["node_modules", "dist", "client", "src/types/**/*.d.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
