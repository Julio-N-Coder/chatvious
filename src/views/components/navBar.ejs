<nav
  class="px-2 md:px-4 lg:px-10 py-5 flex justify-between navbar bg-neutral gap-2"
>
  <%# left side div %>
  <div class="xsm:space-x-2">
    <%# 3 line nav icon %>
    <details class="dropdown md:hidden">
      <summary class="xsm:m-1 btn btn-ghost btn-square m-0">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block w-8 h-8 stroke-current text-neutral-content"
        >
          <path
            strokeLinecap="round"
            strokeLinejoin="round"
            strokeWidth="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </summary>
      <ul
        class="p-2 shadow menu dropdown-content z-[1] bg-base-100 rounded-box w-52"
      >
        <li>
          <a href="/about">About</a>
        </li>
        <li>
          <a href="/dashboard">Dashboard</a>
        </li>
      </ul>
    </details>
    <a href="/" class="text-3xl xsm:text-4xl text-neutral-content sm:ml-2">
      Chatvious
    </a>
    <%# big tabs pages for big screens %>
    <a href="/about" class="nav-tabs-lg hidden md:block sm:ml-2"> About </a>
    <a href="/dashboard" class="nav-tabs-lg hidden md:block sm:ml-2">
      DashBoard
    </a>
  </div>
  <%# right side div %>
  <div class="flex items-center gap-4">
    <%# light/dark mode toggle %>
    <label class="flex cursor-pointer gap-2">
      <%- include('sun-moon/sun-icon'); %>
      <input
        type="checkbox"
        value="dark"
        class="toggle theme-controller rotate-180"
        id="themeSwitch"
      />
      <%- include('sun-moon/moon-icon'); %>
    </label>
    <%- include("./profileIcon", { profileColor, username, first5JoinRequest,
    forNav: true }) %> <%# sign out button for big screens %>
    <button class="btn btn-accent hidden sm:flex sign-out-button">
      Log Out
    </button>
    <%# thee dots login for small screens %>
    <details class="dropdown dropdown-end flex sm:hidden">
      <summary class="m-1 btn btn-ghost px-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block w-5 h-5 stroke-current text-neutral-content"
        >
          <path
            strokeLinecap="round"
            strokeLinejoin="round"
            strokeWidth="2"
            d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"
          ></path>
        </svg>
      </summary>
      <ul
        class="p-2 shadow menu dropdown-content z-[1] bg-base-100 rounded-box w-52"
      >
        <li>
          <%# add logout url %>
          <div class="sign-out-button">Log Out</div>
        </li>
      </ul>
    </details>
  </div>
</nav>
