  <!-- right side div -->
  <div className="flex items-center">
    <!-- light/dark mode toggle -->
    <label className="flex cursor-pointer gap-2 sm:mr-6">
      <%- include('sun-moon/sun-icon'); %>
      <!-- On className attribute, it rotates to make switch look like it's
       checked the same way regardless of os default. use "rotate-180" -->
      <input
        type="checkbox"
        ref={themeSwitchRef}
        checked={themeChecked}
        value={`${isDefaultDarkMode ? "light" : "dark"}`}
        className={`toggle theme-controller ${firstRotate && "rotate-180"}`}
        onChange={updateTheme}
      />
