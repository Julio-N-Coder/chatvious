{
  "name": "ejs-static",
  "description": "This Directory is for bundling static assets for the ejs rendered pages to use and to server them for development",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "webpack --mode=development",
    "build:prod": "webpack --config webpack.prod.js --node-env=production",
    "fullBuild": "npm --prefix ../client run build && npm run build",
    "fullBuild:prod": "npm --prefix ../client run build:prod && npm run build:prod",
    "serve:prod": "webpack serve --mode=production --node-env=production",
    "serve": "webpack serve",
    "static": "node static.js",
    "dev": "node script.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@webpack-cli/generators": "^3.0.7",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.1",
    "cssnano": "^6.1.2",
    "daisyui": "^4.12.2",
    "ejs": "^3.1.10",
    "mini-css-extract-plugin": "^2.8.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.4.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
