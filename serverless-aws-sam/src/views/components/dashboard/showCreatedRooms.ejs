<% if (ownedRooms.length > 0) { %> <% ownedRooms.map((ownedRoom) => { %>
<div
  class="bg-base-300 rounded-sm p-2 border border-black flex flex-col items-center mdsm:flex-row mdsm:justify-between"
>
  <span class="text-lg font-bold self-center text-base-content">
    <%= ownedRoom.roomName %></span
  >
  <div class="space-x-2">
    <a
      href="/rooms/<%= ownedRoom.RoomID %>"
      class="btn btn-sm btn-accent text-lg font-bold"
      >Room Info</a
    >
    <a
      href="chat-room/<%= ownedRoom.RoomID %>"
      class="btn btn-sm btn-accent text-lg font-bold"
      >Join Room</a
    >
  </div>
</div>
<% })} else { %>
<h2 class="text-2xl font-bold text-center p-3">
  You haven't created any rooms
</h2>
<% } %>
